<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="180dp"
    android:background="#fce4ec"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/border_line"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/nave_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/basic_profile" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navi_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dreamgothic3"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="이름"
                android:textColor="#212121"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/navi_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dreamgothic3"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="아이디"
                android:textColor="#424242"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/point" />

        <TextView
            android:id="@+id/navi_user_point"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/dreamgothic7"
            android:text="10000P"
            android:textColor="#212121"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/navi_card_register"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="right"
            android:text="@string/card_register"
            android:textColor="#212121"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/line"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:text="@string/separator"
            android:textColor="#212121"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/navi_point_charge"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/dreamgothic3"
            android:text="@string/point_charge"
            android:textColor="#212121"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>