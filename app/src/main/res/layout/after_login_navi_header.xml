<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@drawable/header_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/acha_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:fontFamily="@font/circe"
        android:text="acha"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/user_border"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/nave_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/basic_profile" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/navi_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="이름"
                    android:textColor="#212121"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dreamgothic3"
                        android:paddingLeft="10dp"
                        android:text="ID"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/navi_user_id"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dreamgothic3"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="아이디"
                        android:textColor="#424242"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dreamgothic3"
                        android:paddingLeft="10dp"
                        android:text="P"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/navi_user_point"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dreamgothic3"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="20000"
                        android:textColor="#424242"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/btn_notification_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:drawableTop="@drawable/message"
            android:fontFamily="@font/dreamgothic3"
            android:text="알림함"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_point_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:drawableTop="@drawable/coin"
            android:fontFamily="@font/dreamgothic3"
            android:text="충전금"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_share_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:drawableTop="@drawable/share_time"
            android:fontFamily="@font/dreamgothic3"
            android:text="공유 시간"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_purpose_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:visibility="gone"
            android:drawableTop="@drawable/share_time"
            android:fontFamily="@font/dreamgothic3"
            android:text="방문 통계"
            android:textSize="11sp" />
    </LinearLayout>


</LinearLayout>