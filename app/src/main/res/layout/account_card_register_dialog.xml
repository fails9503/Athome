<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="190dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/car_register_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="카드등록"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/card_number1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="1234"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusDown="@+id/card_number2"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/card_number2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="5678"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusDown="@+id/card_number3"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/card_number3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="9012"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusDown="@+id/card_number4"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/card_number4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="3456"
            android:inputType="number"
            android:maxLength="4"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/validity_mm"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@+id/validity_yy"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/validity_yy"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border3"
            android:fontFamily="@font/dreamgothic3"
            android:gravity="center"
            android:hint="YY"
            android:inputType="number"
            android:maxLength="2"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_card_register_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="@string/cancel"
            android:textColor="#64ffda"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_card_register_ok"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="@string/register"
            android:textColor="#64ffda"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>