<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".enrollCheckActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/enrollCheck_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fce4ec"
        android:gravity="center"
        tools:ignore="MissingConstraints" >

        <Button
            android:id="@+id/btn_back_enCheck"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="#00ff0000"
            android:drawableTop="@drawable/back"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dreamgothic7"
            android:text="공유주차 정보확인"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="15dp" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/img_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dreamgothic3"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="등록한 이미지"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/en_img"
                android:layout_width="281dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                tools:ignore="InvalidId"
                tools:srcCompat="@drawable/ap_logo"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="50dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="연락망 "
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/en_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="0104567894"
                    android:textSize="15dp"
                    tools:ignore="InvalidId" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="차량번호 "
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/en_carnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="3바 1547"
                    android:textSize="15dp"
                    tools:ignore="InvalidId" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="공유위치 "
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/en_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="서울시 관악구"
                    android:textSize="15dp"
                    tools:ignore="InvalidId" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <Button
                    android:id="@+id/en_check"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/edit_border2"
                    android:fontFamily="@font/dreamgothic7"
                    android:text="@string/btn_check"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>