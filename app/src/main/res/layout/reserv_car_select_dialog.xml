<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reserv_car_select_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="차량선택"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/reserv_car_select_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/reserv_car_direct_input"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:fontFamily="@font/bareun1"
            android:text="직접입력"
            android:textColor="#1b1b1b"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_reserv_car_select_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#00ff0000"
            android:text="@string/cancel"
            android:textColor="#64ffda"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>