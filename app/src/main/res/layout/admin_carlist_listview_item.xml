<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/reserv_list"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carlist_num"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:fontFamily="@font/dreamgothic3"
                android:text="등록번호"
                android:textColor="#212121"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carlist_num_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:fontFamily="@font/dreamgothic3"
                android:text="접수번호"
                android:textColor="#212121"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/carlist_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="회원 아이디"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/carlist_carnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="차량번호"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/carlist_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="소유자 명의"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/carlist_id_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="사용자 아이디 출력"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/carlist_carnum_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="차량등록시 입력한 번호출력"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/carlist_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dreamgothic3"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="이름출력"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <Button
                    android:id="@+id/carlist_okay"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00BCD4"
                    android:text="확인"
                    android:textColor="@color/white"
                    android:layout_marginBottom="3dp"/>

                <Button
                    android:id="@+id/carlist_reject"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#F44336"
                    android:text="보류"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>