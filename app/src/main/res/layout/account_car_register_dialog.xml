<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="160dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/car_register_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="차량등록"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/car_number_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_border3"
        android:gravity="center"
        android:hint="예)10가1234"
        android:inputType="text"
        android:maxLength="7"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_car_register_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="#64ffda"
            android:textSize="15dp" />


        <Button
            android:id="@+id/btn_car_register_ok"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="@string/register"
            android:textStyle="bold"
            android:textColor="#64ffda"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>