<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fce4ec"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/detail"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dreamgothic"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="예약하기"
        android:textColor="@color/input_register"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/View_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/re_carnum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="차량 번호등록"
                android:textColor="@color/input_register"
                android:textSize="15sp"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/origin_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기존정보" />

                <TextView
                    android:id="@+id/origin_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="30바 1535"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/new_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="새 정보" />

                <EditText
                    android:id="@+id/new_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="#fce4ec"
                    android:fontFamily="@font/dreamgothic"
                    android:hint="차량번호 입력"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/de_reserver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="예약자 정보등록"
                android:textColor="@color/input_register"
                android:textSize="15sp"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/origin_phbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기존 번호"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/origin_phnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="01012345678"
                    android:textSize="15sp"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/new_phbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="새 정보"
                    tools:visibility="visible" />

                <EditText
                    android:id="@+id/new_phnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="#fce4ec"
                    android:fontFamily="@font/dreamgothic"
                    android:hint="- 을 제외한 번호입력"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/re_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="예약날짜"
                android:textColor="@color/input_register"
                android:textSize="15sp"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sel_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:text="대여 날짜"
                    android:textSize="15sp"
                    tools:visibility="visible" />

                <DatePicker
                    android:id="@+id/picker_date"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"
                    android:layout_weight="9"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false">

                </DatePicker>
            </LinearLayout>

            <TextView
                android:id="@+id/re_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="예약시간"
                android:textColor="@color/input_register"
                android:textSize="15sp"
                tools:visibility="visible" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="10dp"
                        android:text="시작시간"
                        android:textSize="15sp"
                        tools:visibility="visible" />

                    <TimePicker
                        android:id="@+id/picker_start"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="9"
                        android:timePickerMode="spinner">

                    </TimePicker>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:text="종료시간"
                    android:textSize="15sp"
                    tools:visibility="visible" />

                <TimePicker
                    android:id="@+id/picker_end"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="9"
                    android:timePickerMode="spinner" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/re_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="결제금액"
                    android:textColor="@color/input_register"
                    android:textSize="15sp"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대여 금액 " />

                    <TextView
                        android:id="@+id/rental_mount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 000원+" />

                    <TextView
                        android:id="@+id/mount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 보증금 " />

                    <TextView
                        android:id="@+id/deposit_mount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 000원 = " />

                    <TextView
                        android:id="@+id/total_mount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 000원" />
                </LinearLayout>

                <TextView
                    android:id="@+id/deposit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="보증금은 정상적인 이용 이후 환급"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pay_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:text="결제 수단 선택"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:visibility="visible"/>

                    <TableRow android:layout_height="39dp">

                        <Button
                            android:id="@+id/credit_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="20dip"
                            android:layout_weight="1"
                            android:background="@color/input_register_bg"
                            android:fontFamily="@font/dreamgothic"
                            android:padding="15dp"
                            android:text="신용/체크카드"
                            android:textColor="@color/colorPrimaryDark" />

                        <Button
                            android:id="@+id/point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="20dip"
                            android:layout_weight="1"
                            android:background="@color/input_register_bg"
                            android:fontFamily="@font/dreamgothic"
                            android:padding="15dp"
                            android:text="포인트 결제"
                            android:textColor="@color/colorPrimaryDark" />
                    </TableRow>


                </TableLayout>

                <Button
                    android:id="@+id/res_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/edit_border2"
                    android:fontFamily="@font/dreamgothic"
                    android:padding="15dp"
                    android:text="예약진행"
                    android:textColor="@color/input_register_bg" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>